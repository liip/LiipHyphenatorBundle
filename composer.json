{
    "name": "liip/hyphenator-bundle",
    "type": "symfony-bundle",
    "description": "This Bundle provides support for hyphenating long words using the Org_Heigl_Hyphenator library",
    "keywords": ["hyphenation"],
    "homepage": "http://liip.ch",
    "license": "MIT",
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "Liip and other contributors",
            "homepage": "https://github.com/liip/LiipHyphenatorBundle/contributors"
        }
    ],

    "require": {
        "php":                      ">=5.3.9",
        "Org_Heigl/Hyphenator":     "~2.0",
        "twig/twig":                "~1.20|~2.0",
        "symfony/framework-bundle": "~2.3|~3.0"
    },

    "require-dev": {
        "symfony/twig-bundle": "~2.3|~3.0",
        "symfony/browser-kit": "~2.3|~3.0"
    },

    "autoload": {
        "psr-4": { "Liip\\HyphenatorBundle\\": "" }
    },

    "extra": {
        "branch-alias": {
            "dev-master": "2.0-dev"
        }
    }
}
