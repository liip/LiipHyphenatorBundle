{
    "name": "liip/hyphenator-bundle",
    "type": "symfony-bundle",
    "description": "This Bundle provides support for hyphenating long words using the Org_Heigl_Hyphenator library",
    "keywords": ["hyphenation"],
    "homepage": "http://liip.ch",
    "license": "MIT",
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "Liip and other contributors",
            "homepage": "https://github.com/liip/LiipHyphenatorBundle/contributors"
        }
    ],

    "require": {
        "php": "^5.6.0|^7.0",
        "Org_Heigl/Hyphenator": "~2.0",
        "twig/twig": "~1.20|~2.0",
        "symfony/templating": "^2.7|^3.0|^4.0",
        "symfony/framework-bundle": "^2.7|^3.0|^4.0"
    },

    "require-dev": {
        "symfony/dependency-injection": "^2.7|^3.0|^4.0",
        "symfony/twig-bundle": "^2.7|^3.0|^4.0",
        "symfony/browser-kit": "^2.7|^3.0|^4.0",
        "symfony/yaml": "^2.7|^3.0|^4.0",
        "phpunit/phpunit": "^4.8.35|^6.0",
        "symfony/routing": "^2.7|^3.0|^4.0",
        "symfony/css-selector": "^2.7|^3.0|^4.0"
    },

    "autoload": {
        "psr-4": { "Liip\\HyphenatorBundle\\": "" }
    },

    "extra": {
        "branch-alias": {
            "dev-master": "2.0-dev"
        }
    }
}
